<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.mateusz.remotewakerui.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LayoutHandler">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD"
            android:id="@+id/TopSection"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="1"
                android:background="#DDDDDD">
    
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_weight="0"
                    android:layout_gravity="right" />
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remoteweaker"
                    android:id="@+id/textView"
                    android:layout_gravity="center"
                    android:fontFamily="#FFFFFF" />
    
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
    
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:src="@android:drawable/ic_notification_clear_all"
                    android:layout_weight="1"
                    android:onClick="loginLayout"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF141B84">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/start"
                android:id="@+id/startText"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:height="30dp"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ImageButton_SendMessage"
                    android:src="@android:drawable/ic_dialog_email"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:onClick="sendMessageLayout"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ImageButton_CreateGroup"
                    android:src="@android:drawable/ic_menu_share"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:adjustViewBounds="false"
                    android:onClick="createGroupLayout"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ImageButton_AddFriend"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:layout_marginBottom="22dp"
                    android:onClick="addFriendLayout"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/send_message"
                    android:id="@+id/sendMessage_textview"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/create_group"
                    android:id="@+id/CreateGroup_TextView"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/add_friend"
                    android:id="@+id/addFriend_TextView"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
