<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.agh.ki.io.alarm.alarm">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pl.agh.ki.io.alarm.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.agh.ki.io.alarm.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="pl.agh.ki.io.alarm.MainActivity" />
        <activity android:name="pl.agh.ki.io.alarm.SendMessageActivity"
            android:label="@string/title_activity_sendAlarm">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.agh.ki.io.alarm.MainActivity" />
        </activity>
        <activity android:name="pl.agh.ki.io.alarm.AddFriendActivity"
            android:label="@string/title_activity_addFriend">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.agh.ki.io.alarm.MainActivity" />
        </activity>
        <activity android:name="pl.agh.ki.io.alarm.CreateGroupActivity"
            android:label="@string/title_activity_createGroup">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.agh.ki.io.alarm.MainActivity" />
        </activity>
        <activity android:name="pl.agh.ki.io.alarm.EditFriendActivity"
            android:label="@string/title_activity_editFriend">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.agh.ki.io.alarm.MainActivity" />
        </activity>
        <activity android:name="pl.agh.ki.io.alarm.EditGroupActivity"
            android:label="@string/title_activity_editGroup">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.agh.ki.io.alarm.MainActivity" />
        </activity>
    </application>
</manifest>